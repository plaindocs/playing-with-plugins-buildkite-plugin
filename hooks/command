#!/bin/bash
set -euo pipefail


# Reads a list from plugin config into a global result array
# Returns success if values were read
plugin_read_list_into_result() {
  result=()

  for prefix in "$@" ; do
    local i=0
    local parameter="${prefix}_${i}"

    if [[ -n "${!prefix:-}" ]] ; then
      echo "ðŸš¨ Plugin received a string for $prefix, expected an array" >&2
      exit 1
    fi

    while [[ -n "${!parameter:-}" ]]; do
      result+=("${!parameter}")
      i=$((i+1))
      parameter="${prefix}_${i}"
    done
  done

  [[ ${#result[@]} -gt 0 ]] || return 1
}

if plugin_read_list_into_result BUILDKITE_PLUGIN_PLAYING_WITH_PLUGINS ; then
  for arg in "${result[@]}" ; do
    echo $arg
  done
fi

echo "The plugin is LIVE\n"
echo $BUILDKITE_PLUGIN_PLAYING_WITH_PLUGINS_TEST
echo $BUILDKITE_PLUGIN_PLAYING_WITH_PLUGINS_TEST_1

buildkite-agent annotate "REAL LIVE"